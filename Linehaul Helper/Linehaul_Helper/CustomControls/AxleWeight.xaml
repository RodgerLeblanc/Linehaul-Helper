<?xml version="1.0" encoding="UTF-8"?>
<StackLayout 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Linehaul_Helper.CustomControls.AxleWeight"
    HorizontalOptions="CenterAndExpand"
    Orientation="Horizontal"
    x:Name="axleWeight">

    <Label
        Text="{Binding Source={x:Reference axleWeight}, Path=Position, StringFormat='{0}:'}"
        VerticalOptions="Center"/>
    <Entry
        Text="{Binding Source={x:Reference axleWeight}, Path=Psi}"
        Keyboard="Numeric"
        WidthRequest="200"
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="Center"/>
    <Label 
        Text="PSI = "
        VerticalOptions="Center"/>
    <Label 
        Text="{Binding Source={x:Reference axleWeight}, Path=Weight}"
        VerticalOptions="Center"/>
    <Label 
        Text="kg"
        VerticalOptions="Center"/>
</StackLayout>
